package Array;

import java.util.Scanner;

public class Pattern4 {
	public static void main(String args[])
	{
		int size,i,j,k;
		Scanner input = new Scanner(System.in);
		System.out.println("Enter size of a pattern::");
		 size = input.nextInt();
		 for(i=1;i<=size;i++)
         {
                 for( j=1;j<=size;j++)
          
                 {
                         System.out.print("*");
                 }
               System.out.println();
         }                      
}

}

